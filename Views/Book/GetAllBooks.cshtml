@model IEnumerable<Assignment3.Models.BookModel>

@{
    // var genre = Request.Form["genre"];
    // var url = $"/Book/Genre/{genre}";
    ViewData["Title"] = "All Books";
}

<h2>@ViewData["Title"]</h2>
<h4>List of all books:</h4>

<table class="table">
    <thead>
        <tr>
            <th>BookId</th>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publication Year</th>
            <th>Genre</th>
            <th>IsAvailable</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.PublicationYear</td>
                <td>@book.Genre</td>
                <td>@book.IsAvailable</td>
                <td>
                    <!-- Update link -->
                    <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@book.BookId" class="btn btn-primary">Update</a>
                    <!-- Delete form -->
                </td>
                <td>
                    <form asp-controller="Book" asp-action="DeleteBook" asp-route-id="@book.BookId" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add New Book button -->
<a asp-controller="Book" asp-action="AddBook" class="btn btn-success">Add New Book</a>


<form asp-action="GetBooksByGenre" method="get" asp-controller="Book">
    <div>
        <label>Search by Genre</label>
        <input type="text" name="genre" />
        <input type="submit" value="Search" />
    </div>
</form>
<form asp-action="GetBookById" method="get" asp-controller="Book">
    <div>
        <label>Search by Book ID</label>
        <input type="text" name="id" />
        <input type="submit" value="Search" />
    </div>
</form>


