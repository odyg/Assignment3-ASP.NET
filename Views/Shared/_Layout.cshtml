<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Library System Management App</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav>
            <!-- Navigation bar content here, like links to different pages -->
            <a href="/">Home</a>
            <a href="/Book">All Books</a>
            <a href="/Reader">All Readers</a>
            <a href="/Borrowing">Borrowed Books</a>
            <!-- Add more links as needed -->
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody() <!-- This is where your view content will be rendered -->
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - My Library System Management App</p>
    </footer>

    <script src="~/js/site.js"></script>
</body>
</html>
