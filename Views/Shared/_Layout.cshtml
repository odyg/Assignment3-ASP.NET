<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>@ViewBag.Title - My Library System Management App</title>
     
</head>
<body class="d-flex flex-column min-vh-100">
    <header>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <!-- mx-auto will center the nav items -->
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Book">All Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Reader">All Readers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Borrowing">Borrowed Books</a>
                        </li>
                        <!-- Add more nav items as needed -->
                    </ul>
                </div>
            </div>
        </nav>


    </header>

    <main role="main" class="pb-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-8 col-xl-10">
                    <!-- Adjust the column sizes as needed -->
                    @RenderBody() <!-- This is where your view content will be rendered -->
                </div>
            </div>
        </div>
    </main>


    <footer class="bg-light text-center py-3 mt-auto">
        <!-- Added classes for background, text alignment, and padding -->
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - My Library System Management App</p> <!-- mb-0 removes the bottom margin -->
        </div>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
