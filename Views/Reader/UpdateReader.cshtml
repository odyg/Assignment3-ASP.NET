@model Assignment3.Models.ReaderModel

@{
    ViewData["Title"] = "Update Reader";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="UpdateReader" method="post" asp-controller="Reader">
    <input type="hidden" asp-for="ReaderId" />
    <div class="mb-1">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
    </div>
    <div class="mb-1">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
    </div>
    <div class="mb-1">
        <label asp-for="ZipCode"></label>
        <input asp-for="ZipCode" />
    </div>
    <!-- Repeat for other fields -->
    <div>
        <input type="submit" value="Update Reader" class="btn btn-success mt-1" />
    </div>
</form>
